<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Spouse</th>
      <th>Last yr</th>
      <th>Last 2yr</th>
      <th>Current</th>
      <th>Group</th>
      <th>Wishlist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.spouse %></td>
        <td><%= person.last_yr %></td>
        <td><%= person.last_2yr %></td>
        <td><%= person.current %></td>
        <td><%= person.group.name %></td>
        <td><%= Person.find(person.id).wish_list.pluck(:item) %></td>
        <!--<td><%= Wishlist.select("item").joins(:person).where(:people => { :id => person.id }).map(&:inspect).join(', ') %></td>-->
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %> | 
